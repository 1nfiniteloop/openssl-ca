// Ref: https://code.visualstudio.com/docs/remote/containers#_devcontainerjson-reference
{
	"name": "dlang",
	"dockerFile": "Dockerfile",
	"extensions": [
		"ms-vscode.cpptools",
		"twxs.cmake",
		"vector-of-bool.cmake-tools",
		"webfreak.code-d"
	],
	"runArgs": [
		"--name=openssl-ca.vscode",
		"--volume=vscode.cache:/home/build",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	]
}
